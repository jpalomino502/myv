<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.OscarApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Custom styles for components -->
    <style name="CardStyle">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
    </style>

    <style name="TextStyleTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Theme for splash screen -->
    <style name="Theme.OscarApp.Splash" parent="Theme.OscarApp">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>
</resources>

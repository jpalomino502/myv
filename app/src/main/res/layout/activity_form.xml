<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con el logo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="171dp"
            android:layout_height="85dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_logo" />

    </LinearLayout>



    <!-- Formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Tipo de Servicio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center">

                <RadioGroup
                    android:id="@+id/service_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="SERVICIO"/>

                    <RadioButton
                        android:id="@+id/reinforcement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="REFUERZO"/>
                </RadioGroup>
            </LinearLayout>

            <!-- Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/fecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="date"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Fecha"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <!-- Control de Servicio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/service_control"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Control de Servicio"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <!-- Razón Social -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/razon_social"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Razón Social"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <!-- Dirección -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/direccion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Dirección"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <!-- NIT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/nit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="NIT"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <!-- Teléfono -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/telefono"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Teléfono"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <!-- Celular -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/celular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Celular"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <!-- Contenedor Dinámico de Servicios -->
            <LinearLayout
                android:id="@+id/servicios_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="16dp">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <EditText
                    android:id="@+id/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Tipo de Servicio"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <!-- Observaciones
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <EditText
                    android:id="@+id/observaciones1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Observaciones"
                    android:textColorHint="@color/black"/>
            </LinearLayout>
            -->

            <!-- Horarios de Ingreso y Salida -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HORARIOS DE INGRESO Y SALIDA"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/horaingreso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="time"
                        android:textColor="@color/black"
                        android:background="@drawable/border_rounded"
                        android:padding="12dp"
                        android:hint="Hora de Ingreso"
                        android:textColorHint="@color/black"/>
                    <EditText
                        android:id="@+id/horasalida"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="time"
                        android:textColor="@color/black"
                        android:background="@drawable/border_rounded"
                        android:padding="12dp"
                        android:hint="Hora de Salida"
                        android:textColorHint="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <!-- Contenedor de Equipo de Protección -->
            <LinearLayout
                android:id="@+id/equipo_proteccion_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="16dp">
            </LinearLayout>
        </LinearLayout>
        <!-- Información Adicional -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/producto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Producto"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/dosificacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Dosificación"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/concentracion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Concentración"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/cantidad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Cantidad"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/observacionesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <EditText
                    android:id="@+id/observaciones2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Observaciones"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <!-- Valor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/valortotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Valor ($)"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center">

                <RadioGroup
                    android:id="@+id/tipo_pago_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/valorcredito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CRÉDITO"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/valorcontado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONTADO"
                        android:textColor="@color/black" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/fechavencimiento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="date"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Fecha Vencimiento"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/fecharealizar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="date"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="REALIZAR EL SERVICIO"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/fechaproximo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="date"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="PRÓXIMO SERVICIO"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/autorizacion_cliente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="AUTORIZACIÓN SERVICIO / Nombre del Cliente"
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/nombre_asesor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Nombre del Asesor / Cel."
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/recibi_cliente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="RECIBÍ / Nombre del Cliente / C.C."
                    android:textColorHint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/nombre_tecnico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Nombre del Técnico / Fumigador"
                    android:textColorHint="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/encuesta_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="16dp">
            </LinearLayout>
            <!-- Observaciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <EditText
                    android:id="@+id/observaciones3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:background="@drawable/border_rounded"
                    android:padding="12dp"
                    android:hint="Observaciones"
                    android:textColorHint="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Firma:"
                    android:textSize="18sp"
                    android:textColor="@android:color/black" />

                <com.example.oscarapp.SignatureView
                    android:id="@+id/signature_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@android:color/white"
                    android:padding="16dp"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpiar"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
